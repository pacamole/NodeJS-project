<body>
  <h2 class="text-center mt-3">Categorias</h2>

  {{#each categories}}
    <div class="card mt-4">
      <div class="card-body">

        <div
          style="display: flex; flex-direction: row; border: blanchedalmond; vertical-align: auto;"
        >
          <h3 class="mb-1">{{name}}</h3>
          <button>
            <a href="{{name}}/posts">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-arrow-right"
                viewBox="0 0 16 16"
              >

                <path
                  fill-rule="evenodd"
                  d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
                >
                </path>

              </svg>

            </a>

          </button>

        </div>

        <p>{{description}}</p>
        <br />

        <div style="display: flex; flex-direction: row;">

          <a href="/categorias/editar/{{id}}"><Button
              class="btn btn-success mt-4 mx-2"
              style="transition: 0.15s;"
            >Editar</Button>
          </a>
          <form action="/categorias/deletar" method="post">
            <input type="hidden" name="id" value="{{id}}" />

            <button
              type="submit"
              class="btn btn-danger mt-4"
              style="transition: 0.15s;"
            >Deletar</button>
          </form>

        </div>

        <small>{{createdAt}}</small>

      </div>

    </div>
  {{/each}}

</body>